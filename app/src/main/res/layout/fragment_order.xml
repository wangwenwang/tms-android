<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:background="@color/track_text"
        android:id="@+id/tablayout_orderFragment"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:tabIndicatorColor="@color/really_yellow"
        app:tabSelectedTextColor="@color/yb_yellow"
        app:tabTextColor="@color/yb_light_green"
        app:tabMode="fixed"
        app:tabBackground="@drawable/tab_orders_bg_selector"
        app:tabIndicatorHeight="3dp"
        app:tabGravity="fill"
        >

    </android.support.design.widget.TabLayout>
    <com.kaidongyuan.app.kdydriver.ui.widget.IsScrollableViewPager
        android:id="@+id/viewPager_orderFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></com.kaidongyuan.app.kdydriver.ui.widget.IsScrollableViewPager>
</LinearLayout>