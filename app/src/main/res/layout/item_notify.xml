<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        >
        <ImageView
            android:id="@+id/iv_notify"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_notify"/>
        <TextView
            android:id="@+id/tv_notify_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:layout_marginLeft="1dp"
            android:textSize="16sp"
            android:textColor="@color/yb_yellow"
            android:layout_alignTop="@+id/tv_notify_date"
            android:layout_toRightOf="@+id/iv_notify"
            android:layout_toEndOf="@+id/iv_notify" />

        <TextView
            android:id="@+id/tv_notify_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-01\t00:00"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_notify_context0"
        android:paddingLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_notify_context0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息第一行:"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_notify_type"
            />
        <TextView
            android:id="@+id/tv_notify_context00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="暂未设置"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_notify_type"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_notify_context1"
        android:paddingLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_notify_context1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息第二行:"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_notify_type"
            />
        <TextView
            android:id="@+id/tv_notify_context11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="暂未设置"
            android:textColor="@color/black"
            android:singleLine="true"
            android:focusable="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_notify_type"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_notify_context2"
        android:paddingLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_notify_context2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息第三行:"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_notify_type"
            />
        <TextView
            android:id="@+id/tv_notify_context22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="暂未设置"
            android:singleLine="true"
            android:focusable="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_notify_type"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_notify_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="消息标题栏"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_toLeftOf="@+id/iv_notify_isRead"
            />
        <ImageView
            android:id="@+id/iv_notify_isRead"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/circle_red"
            android:layout_alignTop="@+id/tv_notify_title"
            />
    </RelativeLayout>
</LinearLayout>